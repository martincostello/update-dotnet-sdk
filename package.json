{
  "name": "update-dotnet-sdk",
  "version": "5.0.1",
  "private": true,
  "description": "A GitHub Action that updates the .NET SDK.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "format-check": "prettier --check eslint.config.mjs src/**/*.ts tests/**/*.ts",
    "generate": "npm run build && npm run package",
    "lint": "eslint src/**/*.ts --fix",
    "package": "esbuild lib/main.js --bundle --minify --outdir=dist --packages=bundle --platform=node --sourcemap --target=node24.0.0",
    "test": "jest",
    "publish": "npm run format && npm run lint && npm run generate",
    "all": "npm run publish && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincostello/update-dotnet-sdk.git"
  },
  "keywords": [
    "actions",
    "dotnet",
    "github",
    "sdk"
  ],
  "author": {
    "name": "Martin Costello",
    "url": "https://martincostello.com/"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "reporters": [
      [
        "github-actions",
        {
          "silent": false
        }
      ],
      [
        "summary",
        {
          "summaryThreshold": 1
        }
      ]
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/martincostello/update-dotnet-sdk/issues"
  },
  "homepage": "https://github.com/martincostello/update-dotnet-sdk#readme",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.1",
    "@actions/io": "1.1.3",
    "@octokit/plugin-paginate-rest": "13.2.0",
    "@octokit/plugin-rest-endpoint-methods": "11.0.1",
    "undici": "7.16.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.38.0",
    "@octokit/types": "15.0.0",
    "@stylistic/eslint-plugin": "5.5.0",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "esbuild": "0.25.11",
    "eslint": "9.38.0",
    "eslint-plugin-github": "6.0.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-prettier": "5.5.4",
    "fast-check": "4.3.0",
    "globals": "16.4.0",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
