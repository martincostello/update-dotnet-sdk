{
  "name": "update-dotnet-sdk",
  "version": "3.4.2",
  "private": true,
  "description": "A GitHub Action that updates the .NET SDK.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "check-dist": "npm run build && npm run package",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format-check": "prettier --check src/**/*.ts tests/**/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "esbuild lib/main.js --bundle --minify --outdir=dist --packages=bundle --platform=node --sourcemap --target=node20.0.0",
    "test": "jest",
    "publish": "npm run build && npm run format && npm run lint && npm run package",
    "all": "npm run publish && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincostello/update-dotnet-sdk.git"
  },
  "keywords": [
    "actions",
    "dotnet",
    "github",
    "sdk"
  ],
  "author": {
    "name": "Martin Costello",
    "url": "https://martincostello.com/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/martincostello/update-dotnet-sdk/issues"
  },
  "homepage": "https://github.com/martincostello/update-dotnet-sdk#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@octokit/plugin-paginate-rest": "^11.4.0",
    "@octokit/plugin-rest-endpoint-methods": "^11.0.1",
    "undici": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@octokit/types": "^13.8.0",
    "@stylistic/eslint-plugin": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "fast-check": "^3.23.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 140,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
